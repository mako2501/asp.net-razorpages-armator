@page "{id:int}"
@model RazorPagesArmator.Pages.Ports.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Port</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Port.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Port.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Port.Flag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Port.Flag)
        </dd>
    </dl>
    <hr />
    <h4>Ships in port @Html.DisplayFor(model => model.Port.Name)</h4> 
        
            @foreach (var ship in Model.Port.Ships)
            {
                <dl class="row">
                    
                    <dd class="col-sm-5">
                        <h5>
                    @ship.Name <small><small><a asp-page="../Ships/Details" asp-route-id="@ship.Id">[Ship Details]</a></small></small>
                        </h5>
                    </dd>
                 </dl>
            }
       
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Port?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
