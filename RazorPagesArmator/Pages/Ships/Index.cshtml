@page "{SearchNameString?}"
@model RazorPagesArmator.Pages.Ships.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index of Armator ships</h1>

<p>
    <a asp-page="Create">Create New Ship</a>
</p>

<form>
    <p>
        Flag: <select asp-for="ShipFlag" asp-items="Model.Flags">
            <option value="">All</option>
        </select>
        Name: <input type="text" asp-for="SearchNameString" />
        <input type="submit" value="Filtruj" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ships[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ships[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ships[0].Flag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ships[0].Mmsi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ships[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ships[0].Beam)
            </th>
            <th>
               In Port
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ships) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mmsi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beam)
            </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Port.Name)
                   
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

